<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_lesson"
    android:layout_width="match_parent"
    android:layout_height="64dp">

    <TextView
        android:id="@+id/tv_lesson_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_centerVertical="true"
        android:text="1."
        android:textSize="@dimen/item_text"/>

    <TextView
        android:id="@+id/tv_lesson_before"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/tv_lesson_id"
        android:layout_marginLeft="16dp"
        android:text="18:00"
        android:textSize="21dp"/>

    <TextView
        android:id="@+id/tv_lesson"
        android:layout_width="10dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/tv_lesson_before"
        android:text="~"
        android:textSize="@dimen/item_text"/>

    <TextView
        android:id="@+id/tv_lesson_after"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/tv_lesson"
        android:text="19:00"
        android:textSize="@dimen/item_text"/>

    <Button
        android:id="@+id/btn_lesson_edit"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="16dp"
        android:layout_alignParentRight="true"
        android:background="@color/green"
        android:text="Edit"
        android:textSize="@dimen/item_text"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="9dp"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>